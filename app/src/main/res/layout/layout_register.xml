<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dde1ee"
    >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="注册账号"
    android:textColor="@color/colorPrimary"
    android:layout_margin="5dp"
    android:textSize="10pt"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择头像"
            android:textColor="@color/colorAccent"
            android:layout_alignParentLeft="true"
            android:textSize="10pt"
            android:layout_margin="5dp"
            />
        <ImageView
            android:id="@+id/regist_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="#ffffff"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="用户名"
            android:textColor="@color/colorAccent"
            android:layout_margin="5dp"
            android:textSize="10pt"
            />
        <EditText
            android:id="@+id/regist_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:inputType="text"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="手机号"
            android:textColor="@color/colorAccent"
            android:textSize="10pt"
            android:layout_margin="5dp"
            />
        <EditText
            android:id="@+id/regist_num"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:inputType="number"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="个人邮箱"
            android:textColor="@color/colorAccent"
            android:textSize="10pt"
            android:layout_margin="5dp"
            />
        <EditText
            android:id="@+id/regist_email"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:inputType="textEmailAddress"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="密码"
            android:textColor="@color/colorAccent"
            android:textSize="10pt"
            />
        <EditText
            android:id="@+id/regist_code"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:inputType="text"
            android:layout_margin="5dp"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/Isregist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="注       册"
        android:textColor="#FFFFFF"
        android:layout_margin="20dp"
        android:fontFamily="@string/abc_activity_chooser_view_see_all"
        android:textSize="10pt"
        />
</LinearLayout>